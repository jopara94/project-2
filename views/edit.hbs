{{#with hacks}}
<div style="width: 40vw">
    <h2>Answer Question:</h2>

    <form action="/{{id}}?_method=put" method="post">

        <div class="form-group">
            <label for="title">Question:</label>
            <input type="text" class="form-control" name="title" value="{{title}}" required>
        </div>
        <div class="form-group">
            <label for="Author">Asked By:</label>
            <input type="text" class="form-control" name="author" value="{{author}}" required>
        </div>
        <div class="form-group">
            <label for="bodyBox">Answer:</label>
            <textarea class="form-control" name="description" rows="3" required>{{body}}</textarea>
        </div>

        <input type="submit" class="btn btn-success" value="Add Answer" />
    </form>
</div>
{{/with}}